<h2>All Items</h2>
<table class="table">
  <tr><th>Item</th><th></th><th>Description</th><th>Price</th><th></th></tr>
  <% @items.each do |item| %>
  <% if !item.retired %>
    <tr>
      <td>
        <%= link_to item.title, item_path(item) %>
      </td>
      <td>
        <%= image_tag item.image.url(:thumb) %>
      </td>
      <td>
        <%= item.description %>
      </td>
      <td>
        <%= number_to_currency(item.price.to_f / 100.00) %>
      </td>
      <td>
        <%= button_to "Add to Cart", cart_index_path(item_id: item), class: "btn btn-default" %>
      </td>
    </tr>
  <% end %>
  <% end %>
</table>
